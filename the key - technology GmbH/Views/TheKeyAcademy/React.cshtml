<script src="/js/react/wordpress-reader/bundle.js"></script>
<script>
    window.addEventListener('DOMContentLoaded', () => {
        console.log('React');

        const root = document.getElementById('root');
        const port = window.location.port;
        window.wp_wc.mountApp(root, port);
    });
</script>
<style>
    .blogpost-container1 {
        display: grid;
        grid-template-areas: "title author date" "wordCount wordCount wordCount";
        gap: 5px;
    }

    .blogpost-container {
        display: grid;
        grid-template-areas: "title title title" "author date none" "wc wc wc"
    }

    .blogpost-title {
        font-weight: bold;
        font-size: large;
        grid-area: "title";
    }

    .blogpost-author {
        grid-area: "author";
    }

    .blogpost-date {
        grid-area: "date";
    }

    .blogpost-wordCount {
        grid-area: "wc";
    }
</style>

<div id="root"></div>
